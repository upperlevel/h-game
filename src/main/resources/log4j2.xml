<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <!-- Class-specific configuration example (if you disable this every packet will be logged) -->
        <!--Logger name="xyz.upperlevel.hgame.network.PayloadPacketCodec" level="debug" additivity="false">
            <AppenderRef ref="Console" level="debug"/>
        </Logger-->
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
