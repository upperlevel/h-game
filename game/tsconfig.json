{
  "compilerOptions": {
    "typeRoots": ["./@types/*", "./node_modules/@types/*"],

    "baseUrl": ".",
    "paths": {
      "*": ["./@types/*", "./node_modules/@types/*"],
      "@common/*": ["../common/src/*"]
    },

    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  }
}
